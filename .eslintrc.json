{
    "env": {
		"browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "backtick"
        ],
        "semi": [
            "error",
            "always"
        ],
		"no-console": "off",
		"arrow-body-style": [
			"error",
			"always"
		],
		"arrow-parens": [
			"error",
			"as-needed"
		],
		"arrow-spacing": [
			"error"
		],
		"no-confusing-arrow": [
			"warn"
		],
		"no-var": [
			"error"
		],
		"prefer-arrow-callback": [
			"error"
		],
		"prefer-const": [
			"error"
		],
		"space-before-blocks": [
			"error",
			"always"
		],
		"block-spacing": [
			"error",
			"always"
		]
    }
}
